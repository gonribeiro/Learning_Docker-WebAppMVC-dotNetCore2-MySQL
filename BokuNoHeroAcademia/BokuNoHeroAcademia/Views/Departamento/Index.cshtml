@model IEnumerable<BokuNoHeroAcademia.Models.Departamento>

@{
    ViewData["Title"] = "Index";
}

<h1>Departamento <a type="button" class="btn btn-success" asp-action="Create">Cadastrar</a></h1>

<script>
    $(document).ready( function () {
        $('#datatable').DataTable({
            "language": {
                "lengthMenu": "Mostrar por pagina _MENU_",
                "zeroRecords": "Nenhum registro encontrado",
                "info": "Página _PAGE_ de _PAGES_",
                "infoEmpty": "Nenhum registro encontrado",
                "search": "Buscar",
                "paginate": {
                    "first": "Primeiro",
                    "last": "Último",
                    "next": "Próximo",
                    "previous": "Anterior"
                }
            }
        });
    } );
</script>

<table id="datatable" class="table table-striped table-sm table-hover">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Coordenador)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartamentoID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Coordenador.NomeHeroi)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.DepartamentoID">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@item.DepartamentoID">Apagar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
