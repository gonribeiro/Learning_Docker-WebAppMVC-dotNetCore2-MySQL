@model BokuNoHeroAcademia.Models.Departamento

@{
    ViewData["Title"] = "Delete";
}

<div>
    <h4>Apagar Departamento</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Coordenador)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Coordenador.NomeHeroi)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="DepartamentoID" />
        <input type="submit" value="Confirmar Apagar" class="btn btn-danger" />
    </form>
</div>

<br />
<div>
    <a asp-action="Index">Voltar</a>
</div>

