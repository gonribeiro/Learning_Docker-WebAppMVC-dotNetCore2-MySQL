@model IEnumerable<BokuNoHeroAcademia.Models.Curso>

@{
    ViewData["Title"] = "Index";
}

<h1>Curso <a type="button" class="btn btn-success" asp-action="Create">Cadastrar</a></h1>

<script>
    $(document).ready( function () {
        $('#datatable').DataTable({
            "language": {
                "lengthMenu": "Mostrar por pagina _MENU_",
                "zeroRecords": "Nenhum registro encontrado",
                "info": "Página _PAGE_ de _PAGES_",
                "infoEmpty": "Nenhum registro encontrado",
                "search": "Buscar",
                "paginate": {
                    "first": "Primeiro",
                    "last": "Último",
                    "next": "Próximo",
                    "previous": "Anterior"
                }
            }
        });
    } );
</script>

<table id="datatable" class="table table-striped table-sm table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CursoID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Creditos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Departamento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CursoID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Titulo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Creditos)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Departamento.Nome)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CursoID">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@item.CursoID">Apagar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
