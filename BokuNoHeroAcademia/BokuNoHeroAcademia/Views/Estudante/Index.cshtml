@model BokuNoHeroAcademia.Models.AcademiaViewModels.EstudanteCurso

@{
    ViewData["Title"] = "Index";
}

<h1>Estudante <a type="button" class="btn btn-success" asp-action="Create">Cadastrar</a></h1>

<script>
    $(document).ready(function () {
        $('#datatable').DataTable({
            "language": {
                "lengthMenu": "Mostrar por pagina _MENU_",
                "zeroRecords": "Nenhum registro encontrado",
                "info": "Página _PAGE_ de _PAGES_",
                "infoEmpty": "Nenhum registro encontrado",
                "search": "Buscar",
                "paginate": {
                    "first": "Primeiro",
                    "last": "Último",
                    "next": "Próximo",
                    "previous": "Anterior"
                }
            }
        });
    });
</script>

<table id="datatable" class="table table-striped table-sm table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Nome de Herói</th>
            <th>Data de Contratação</th>
            <th>Cursos Inscritos</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Estudantes)
        {
            string selectedRow = "";
            if (item.ID == (int?)ViewData["EstudanteID"])
            {
                selectedRow = "success";
            }
            <tr class="@selectedRow">
                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeHeroi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataMatricula)
                </td>
                <td>
                    @{
                        foreach (var curso in item.Inscricoes)
                        {
                            @curso.Curso.CursoID @:  @curso.Curso.Titulo <br />
                        }
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Editar / Inscrever em Cursos</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Apagar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
